<h1 class="text-center mt-4"> <%= @user.username%>'s profile </h1>

<i> Username- <%= @user.username%></i>
<i> Email- <%= @user.email%></i>
<i> First Name- <%= @user.first_name%></i>
<i> Last Name- <%= @user.last_name%></i>
<i> Age- <%= @user.age%></i>

<img src=<%= @user.avatar %> />

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  </div>
<% end %>
</div>